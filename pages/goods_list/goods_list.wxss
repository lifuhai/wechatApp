/* pages/goods_list/goods_list.wxss */
.listitem {
  display: flex;
  padding: 5rpx;
  background-color: white;
  border-bottom: 1rpx solid #ccc;
}
.listitem .imageContant {
  flex: 3;
}
.listitem .imageContant image {
  width: 90%;
}
.listitem .textContant {
  margin-left: 15rpx;
  flex: 7;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.listitem .textContant .textdetial {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: black;
}
.listitem .textContant .textprice {
  color: var(--themColor);
  font-size: 25rpx;
}
