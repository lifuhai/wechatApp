page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cate_ {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cate_ .left_ {
  flex: 1;
}
.cates .cate_ .left_ .left_title {
  background-color: white;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
}
.cates .cate_ .left_ .isSelect {
  color: var(--themColor);
  border-left: 5rpx solid #ff3300;
}
.cates .cate_ .right_ {
  flex: 3;
  background-color: #f5f5f5;
}
.cates .cate_ .right_ .righr_connet .item_title {
  background-color: #f5f5f5;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
}
.cates .cate_ .right_ .righr_connet .goods_list {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.cates .cate_ .right_ .righr_connet .goods_list navigator {
  width: 33.33%;
  text-align: center;
  background-color: white;
  border: 10rpx solid #f5f5f5;
  height: 188.75rpx;
}
.cates .cate_ .right_ .righr_connet .goods_list navigator image {
  width: 65%;
}
