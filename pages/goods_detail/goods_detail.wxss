/* pages/goods_detail/goods_detail.wxss */
page {
  padding-bottom: 90rpx;
}
.swiper_view swiper {
  height: 70vw;
  background-color: white;
  text-align: center;
}
.swiper_view swiper image {
  width: 65%;
}
.goods_title {
  display: flex;
  height: 140rpx;
  background-color: white;
  padding: 0 25rpx;
  border-bottom: 15rpx solid #f3f3f3;
}
.goods_title .titlegroup {
  flex: 5;
  border-right: 3rpx solid #f3f3f3;
}
.goods_title .titlegroup .price {
  color: var(--themColor);
  font-size: 35rpx;
  font-weight: 600;
}
.goods_title .titlegroup .title {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: black;
  font-size: 28rpx;
  margin-right: 15rpx;
}
.goods_title .sc_group {
  background-color: white;
  flex: 1;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.goods_title .sc_group image {
  width: 45rpx;
  height: 45rpx;
}
.detaititle {
  color: var(--themColor);
  font-size: 35rpx;
  font-weight: 800;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 5rpx ;
}
.detaititle text {
  margin-left: 25rpx;
}
.botomgroup {
  border-top: 1rpx solid #f3f3f3;
  display: flex;
  position: fixed;
  bottom: 0;
  height: 90rpx;
  width: 100%;
  background-color: white;
}
.botomgroup button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.botomgroup .text_kefu {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 23rpx;
  position: relative;
}
.botomgroup .text_shear {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 23rpx;
  position: relative;
}
.botomgroup .text_car {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 23rpx;
  position: relative;
}
.botomgroup .text_add {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffa500;
  color: white;
  font-weight: 600;
  position: relative;
}
.botomgroup .text_buy {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--themColor);
  color: white;
  font-weight: 600;
}
.botomgroup image {
  width: 35rpx;
  height: 35rpx;
}
